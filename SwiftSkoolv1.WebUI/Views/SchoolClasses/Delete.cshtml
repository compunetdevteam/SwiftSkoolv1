@model SwiftSkoolv1.Domain.SchoolClass




<h3>Are you sure you want to delete this?</h3>


    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ClassCode)
        </dt>

        <dd>
