@model IEnumerable<SwiftSkoolv1.Domain.PrincipalComment>

@{
    ViewBag.Title = "Principal's Remark";
}

<div class="card">
    <div class="card-block">

        <div class="form-header  purple darken-4">
            <h3>
                Principal's Remark <span>
                    <a onclick="myFunction()" class="btn btn-primary"> <i class="fa fa-plus left"></i> Add Principals Comment</a>
                </span>
            </h3>
        </div>
        <table id="Jdatatable" class="table table-responsive table-striped table-hover">
            <thead>
                <tr>
                    <th>Class Name</th>
                    <th>Minimun Grade</th>
                    <th>Maximun Grade</th>
                    <th>Remarks Grade</th>
                    <th>Actions</th>

                </tr>
            </thead>
        </table>

        <!-- Modal -->
        <div class="modal fade modal-bf-fh" id="actionsList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <!--Content-->
                <div class="modal-content">
                    <!--Header-->
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <div class="flex-center">
                            <h4 class="modal-title">Principal Remarks</h4>
                        </div>
                    </div>
                    <!--Body-->
                    <div class="modal-body" id="myModalDivBody">

                    </div>
                </div>
                <!--/.Content-->
            </div>
        </div>
        <!-- /.Modal-->
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/jquery-3.1.1.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
    
        window.oTable = $("#Jdatatable").DataTable({
            "processing": true, // for show progress bar while loading
            "serverSide": true, // if it is true the preocess is done on server side
            "filter": true, // disables search box
            "info": true,
            "stateSave": true,
            "orderMulti": false, // disable multiple column loading at once
            "ajax": {
                "url": "/PrincipalComments/GetIndex",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                { "data": "Remark", "autoWidth": true },
                { "data": "ClassName", "autoWidth": true },
                { "data": "MinimumGrade", "autoWidth": true },
                { "data": "MaximumGrade", "autoWidth": true },
                {
                    "data": "Id",
                    "autoWidth": true,
                    "render": function (data) {
                        return '<a href="#" onclick="Edit(' + data + ')" ><i class="fa fa-pencil" aria-hidden="true" ></i></a>' +
                            '<a class="text-danger" href="#" onclick="Delete(' + data + ')" ><i class="fa fa-remove" aria-hidden="true" ><i/></a>';

                    }
                }

            ]
        });

    });
    function Edit(Id) {
        var url = "/PrincipalComments/Save?id=" + Id;
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };
    function Delete(Id) {
        var url = "/PrincipalComments/Delete?id=" + Id;
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };
    function myFunction() {
        var url = "/PrincipalComments/Save?id=0";
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };
</script>
