@model SwiftSkoolv1.Domain.AssignFormTeacherToClass

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Assign FormTeacher To Class</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ClassName)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.ClassName)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Username)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Username)
            </dd>
    
        </dl>
    
        <form id="myform" onsubmit="return false;">
            @Html.AntiForgeryToken()

            <input type="hidden" id="id" name="id" class="form-control" value="@Model.Id">
            <input id="btndelete" type="submit" value="Delete" class="btn btn-danger" /> |

            <a href="#" class="btn btn-info" data-dismiss="modal">Cancel</a>
        
        </form>
    </div>

<script type="text/javascript">

    $("#btndelete").click(function () {

        var data = $("#myform").serialize();
        //window.alert(data);
        $.ajax({
            type: "POST",
            url: "/AssignFormTeacherToClasses/Delete",
            data: data,
            success: function (data) {
                if (data.status) {
                    $('#actionsList').modal("hide");

                    window.oTable.ajax.reload(); //run my_fun() ondomready

                    toastr["info"](data.message);
                    $('#myform')[0].reset();
                } else {

                    toastr["error"](data.message);
                }

            }
        });
    });


</script>