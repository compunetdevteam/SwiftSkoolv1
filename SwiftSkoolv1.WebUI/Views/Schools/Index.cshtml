@model IEnumerable<SwiftSkoolv1.Domain.School>

@{
    ViewBag.Title = "Schools";
}

<div class="container-fluid">
    <!-- First row -->
    <div class="row">
        <!-- First column -->
        <div class="col-md-8">
       
            <div class="row">
                <div class="col-md-12 mb-1">
                    <!-- Tabs -->
                    <!-- Nav tabs -->
                    <div class="tabs-wrapper">
                        <ul class="nav classic-tabs tabs-primary primary-color" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link waves-light active" data-toggle="tab" href="#panel83" role="tab">Schools</a>
                            </li>
                        </ul>
                    </div>
                    <!-- Tab panels -->
                    <div class="tab-content card">
                        <!--Panel 1-->
                        <div class="tab-pane fade show active" id="panel83" role="tabpanel">
                            <div class="table-responsive">
                                <table id="Jdatatable" class="table table-responsive">
                                    <thead>
                                    <tr>
                                        <th>School Name</th>
                                        <th>Address</th>
                                        <th>School Type</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                        <!--/.Panel 1-->
                    </div>
                    <!-- /.Tabs -->
                </div>
            </div>
        </div>
        <!-- /.First column -->
        <!-- Second column -->
        <div class="col-md-4 mb-1">
            <div class="card contact-card with-padding">
                <div class="card-body" id="mydetailBody">
               
                </div>
            </div>
        </div>
        <!-- /.Second column -->
    </div>
    <!-- /.First row -->
</div>
<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
    <a class="btn-floating btn-large red">
        <i class="fa fa-pencil"></i>
    </a>

    <ul>
        <li><a href="#" onclick="AddNew()" class="btn-floating yellow darken-1"><i class="fa fa-user"></i></a></li>
    </ul>
</div>
<!-- Modal -->
<div class="modal fade modal-bf-fh" id="actionsList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="flex-center">
                    <h4 class="modal-title">School Details</h4>
                </div>
            </div>
            <!--Body-->
            <div class="modal-body" id="myModalDivBody">

            </div>
        </div>
        <!--/.Content-->
    </div>
</div>
<!-- /.Modal-->

<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        

        // var gender = "@ViewBag.Gender";
        window.oTable = $("#Jdatatable").DataTable({
            "processing": true, // for show progress bar while loading
            "serverSide": true, // if it is true the preocess is done on server side
            "filter": true, // disables search box
            "info": true,
            "stateSave": true,
            "orderMulti": false, // disable multiple column loading at once
            "ajax": {
                "url": "/Schools/GetIndex",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                { "data": "Name", "autoWidth": true },
                { "data": "Alias", "autoWidth": true },
                { "data": "Address", "autoWidth": true },
                {
                    "data": "SchoolId",
                    "autoWidth": true,
                    "render": function(data) {
                        return '<a href="#" onclick="Detail(\'' + data + '\')" data-toggle="tooltip" data-placement="top" title="View Details"><i class="fa fa-info-circle" aria-hidden="true" ></i></a>' +
                            '<a href="#" onclick="Edit(\'' + data + '\')" data-toggle="tooltip" data-placement="top" title="Edit School"><i class="fa fa-pencil" aria-hidden="true" ><i/></a>';
                    }
                }
                //{ "data": "EmailID", "autoWidth": true },
                //{ "data": "Phone", "autoWidth": true },
            ]
        });

       
    });
    $(window).scroll(function(){
        $("#mydetailBody").stop().animate({"marginTop": ($(window).scrollTop()) + "px", "marginLeft":($(window).scrollLeft()) + "px"}, "slow" );
    });
    function Edit(schoolId) {

        var url = "/Schools/Edit?id=" + schoolId;
        window.open(''+url+'', '_self');
    };
       
    function Detail(schoolId) {
        //window.alert(subjecId);
        var url = "/Schools/PartialDetails?id=" + schoolId;
        $('#mydetailBody').load(url);
               
    };
   
    function AddNew() {
        window.open('@Url.Action("Create", "Schools")', '_self');
    };
</script>
