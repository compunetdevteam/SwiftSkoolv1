
@{
    ViewBag.Title = "Verify School Fee";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5> School Fee Payment Record</h5>
                    <div class="ibox-tools">

                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>

                    </div>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table id="Jdatatable" class="table table-striped table-bordered table-hover table-responsive dataTables-example">
                            <thead>
                                <tr>
                                    <th>Matric No</th>
                                    <th>FullName</th>
                                    <th>Reference No</th>
                                    <th>Date</th>
                                    <th>Gender</th>
                                    <th>Programme Name</th>
                                    <th>Level</th>
                                    <th>PhoneNumber</th>
                                </tr>
                            </thead>
                        </table>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-3.1.1.min.js"></script>

<script type="text/javascript">


    $(document).ready(function () {
        window.oTable = $("#Jdatatable").DataTable({
            "processing": true, // for show progress bar while loading
            "serverSide": true, // if it is true the preocess is done on server side
            "filter": true, // disables search box
            "info": true,

            "stateSave": true,
            "orderMulti": false, // disable multiple column loading at once
            "ajax": {
                "url": "/SchoolFeePayments/GetSchoolFee",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                { "data": "MatricNo", "autoWidth": true },
                { "data": "FullName", "autoWidth": true },
                { "data": "ReferenceNo", "autoWidth": true },
                { "data": "Date", "autoWidth": true },
                { "data": "Gender", "autoWidth": true },
                { "data": "ProgrammeName", "autoWidth": true },
                { "data": "LevelName", "autoWidth": true },
                { "data": "PhoneNumber", "autoWidth": true }

            ]
        });
    });


</script>