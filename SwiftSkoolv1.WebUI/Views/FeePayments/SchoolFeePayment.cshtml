
@{
    ViewBag.Title = "School Fee Payment";
}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Faculties</h5>
                    <div class="ibox-tools">

                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>

                    </div>
                </div>
                <div class="ibox-content">
                    <article class="margin-bottom-xxl">
                        <p class="lead">
                            Please use the following parameters to perform Query
                        </p>
                    </article>
                    <div class="card-body">
                        <form class="form-inline" id="formFilter" onsubmit="return false;">
                            <div class="row">
                                <div class="col-sm-2">
                                    <div class="form-group">
                                        <label>Fee Category</label>
                                        @Html.DropDownList("FeeCategoryId", null, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-5">
                                    <div class="form-group">
                                        <label>Department Name</label>
                                        @Html.DropDownList("DepartmentId", (SelectList)ViewBag.DepartmentId, "", new { @class = "form-control" })

                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <div class="form-group">
                                        <label>Session Name</label>
                                        @Html.DropDownList("SessionId", (SelectList)ViewBag.SessionId, "", new { @class = "form-control" })

                                    </div>
                                </div>
                                <div class="col-sm-1">
                                    <div class="form-group">
                                        <label for="LevelId">Level</label>
                                        @Html.DropDownList("LevelId", (SelectList)ViewBag.LevelId, "", new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-1">
                                    <br />
                                    <button type="submit" id="btn-search" class="btn btn-raised btn-primary ink-reaction">Search/View</button>
                                </div>
                            </div>
                            <br />
                            <div class="row">

                                <div class="col-md-6">
                                    @*<button type="submit" id="btn-dwn" class="btn btn-raised btn-default-light ink-reaction">Export To Pdf</button>
                                        <button type="submit" id="btn-excel" class="btn btn-raised btn-default-light ink-reaction">Export to Excel</button>*@
                                </div>
                            </div>
                        </form>
                    </div><!--end .row -->

                </div>
                <div class="table-responsive">
                    <table id="Jdatatable" class="table table-striped table-bordered table-hover table-responsive dataTables-example">
                        <thead>
                            <tr>
                                <td>Matric No</td>
                                <td>FullName</td>
                                <td>Gender</td>
                                <td>Department</td>
                                <td>Programme Name</td>
                                <td>Level</td>
                                <td>PhoneNumber</td>
                            </tr>
                        </thead>
                    </table>

                </div>

            </div>
        </div>
    </div>
</div>





<script src="~/Scripts/jquery-3.1.1.min.js"></script>

<script type="text/javascript">


    $(document).ready(function () {
        window.oTable = $("#Jdatatable").DataTable({
            "processing": true, // for show progress bar while loading

            "ajax": {
                "url": "/SchoolFeePayments/GetStudentPayment",
                "type": "POST",
                "data": function (d) {
                    return $('#formFilter').serialize();
                },
                "datatype": "json"
            },
            "columns": [
                { "data": "MatricNo", "autoWidth": true },
                { "data": "FullName", "autoWidth": true },
                { "data": "Gender", "autoWidth": true },
                { "data": "DeptName", "autoWidth": true },
                { "data": "ProgrammeName", "autoWidth": true },
                { "data": "LevelName", "autoWidth": true },
                { "data": "PhoneNumber", "autoWidth": true }

            ],
            responsive: true,
            dom: '<"html5buttons"B>lTfgitp',
            buttons: [
                { extend: 'copy' },
                { extend: 'csv' },
                { extend: 'excel', title: 'FacultyList' },
                { extend: 'pdf', title: 'FacultyList' },

                {
                    extend: 'print',
                    customize: function (win) {
                        $(win.document.body).addClass('white-bg');
                        $(win.document.body).css('font-size', '10px');

                        $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                    }
                }
            ]
        });


        $("#btn-search").click(function () {
            // window.alert("sem:" + $('#SemesterId').val() + " sess:" + $('#SessionId').val());
            window.oTable.ajax.reload();

        });
        $("#btn-dwn").click(function () {
            var url = "/Students/DownloadGraduatePdfReport?SessionName=" + $('#SessionName').val() + "&DepartmentId=" + $('#DepartmentId').val() + "&Indegeneous=" + $('#Indegeneous').val();
            window.open(url, '_blank');

        });
        $("#btn-excel").click(function () {

            var url = "/Students/DownloadGraduateExcelReport?SessionName=" + $('#SessionName').val() + "&DepartmentId=" + $('#DepartmentId').val() + "&Indegeneous=" + $('#Indegeneous').val();
            window.open(url, '_self');
        });


    });


</script>


