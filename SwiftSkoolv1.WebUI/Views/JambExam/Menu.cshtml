<script type="text/javascript">
    //window.alert("11");
    function Edit(questionNo, courseId, studentId, examType) {
        var url = "/TakeExam/Exam?questionNo=" + questionNo + "&subjectId=" + courseId + "&studentid=" + studentId + "&examType=" + examType;
        var totalQuestion = '@count';
        document.getElementById("NextQuestion").value = questionNo;

        if (questionNo === totalQuestion) {
            $('#previousButton').trigger('click');

        } else {
            $('#nextButton').trigger('click');
 
        }
        //window.alert(document.getElementById("NextQuestion").value);
        
    };

    $("#btnsubmit").click(function () {

        var data = $("#myform").serialize();

        $.ajax({
            type: "POST",
            url: "/Subjects/Save",
            data: data,
            success: function (data) {
                if (data.status) {
                    $('#actionsList').modal("hide");
                    // debugger
                    //$.fn.oTable();
                    window.oTable.ajax.reload(); //run my_fun() ondomready
                    //window.location.href = "/Subjects/Index";
                        
                    toastr["success"](data.message);
                    $('#myform')[0].reset();
                } else {
                    //$('#actionsList').modal("hide");
                    toastr["error"]("Subject code and Name are required field");
                }

            }
        });
    });

 
</script>