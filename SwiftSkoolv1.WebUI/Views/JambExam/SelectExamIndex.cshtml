@model CompunetCbte.ViewModels.CBTE.SelectSubjectVm



<div class="well">
   
    <h2>Welcome to Computer Based Test for Ebonyi State University. <br/>
    Follow All necessary instructions. Good Luck...
    </h2>
    <p>
        <ol class="text-bold text-info">
            <li>The List of Subject Scheduled for today will appear in the dropdown,<br/>
                    Please Select subject of your choice</li>
            <li> Click the Select Exam Button button to read the instruction for the Subject selected</li>
            <li>If you do not understand a question, you can skip by clicking the NEXT button to come back to it.</li>
            <li>Please, be aware you can't navigate back after selecting the and you click the "Select Exam" button </li>
           
        </ol>
    </p>

   </div>

@using (Html.BeginForm("SelectSubject", "TakeExam", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        <h2>@ViewBag.ErrorMessage</h2>
        @*<h2>@ViewBag.ServerDate</h2>*@
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("SubjectName", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-7">
                @Html.DropDownList("SubjectName", null, htmlAttributes: new { @class = "form-control", })
                @Html.ValidationMessageFor(model => model.SubjectName, "", new { @class = "text-danger" })
            </div>
        </div>
        @*<div class="form-group">
                @Html.Label("Level Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("LevelId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.LevelId, "", new { @class = "text-danger" })
                </div>
            </div>*@
        <div class="form-group">
            <div class="col-md-7">
                @Html.DropDownList("ExamTypeId", null, htmlAttributes: new { @class = "form-control", style = "display:none", @readonly = "true" })
                @Html.ValidationMessageFor(model => model.ExamTypeId, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="SELECT EXAM" class="btn ink-reaction btn-raised btn-primary btn-loading-state" />
            </div>
        </div>
    </div>
}

<h2>@ViewBag.ServerDate</h2>
