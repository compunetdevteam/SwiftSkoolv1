@model IEnumerable<SwiftSkoolv1.Domain.Session>

<a onclick="myFunction()" class="btn btn-primary btn-lg"> <i class="fa fa-plus left"></i> Add Session</a>
<br />
<table id="Jdatatable" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Session Name</th>
            <th>Active Session</th>
            <th>Action</th>
        </tr>
    </thead>
</table>

<!-- Modal -->
<div class="modal fade modal-bf-fh" id="actionsList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="flex-center">
                    <h4 class="modal-title">Session</h4>
                </div>
            </div>
            <!--Body-->
            <div class="modal-body" id="myModalDivBody">
            </div>
        </div>
        <!--/.Content-->
    </div>
</div>
<!-- /.Modal-->

<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        window.oTable = $("#Jdatatable").DataTable({
            "processing": true, // for show progress bar while loading
            "serverSide": true, // if it is true the preocess is done on server side
            "filter": true, // disables search box
            "info": true,
            "stateSave": true,
            "orderMulti": false, // disable multiple column loading at once
            "ajax": {
                "url": "/Sessions/GetIndex",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                { "data": "SessionName", "autoWidth": true },
                { "data": "ActiveSession", "autoWidth": true },
                { // fifth column (Edit link)
                    "data": "SessionId",
                    "autoWidth": true,
                    "render": function (data) {
                        return '<a href="#" title="Edit Session" onclick="Edit(' + data + ')" ><i class="fa fa-pencil" aria-hidden="true" >Edit</i></a>&nbsp;&nbsp;&nbsp;&nbsp;' +
                            '<a class="text-danger" title="Delete Session" href="#" onclick="Delete(' + data + ')" ><i class="fa fa-remove" aria-hidden="true" >Remove<i /></a>';
                    }
                }
            ]
        });
    });

    function Edit(subjecId) {
        var url = "/Sessions/Save?id=" + subjecId;

        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };

    function Delete(subjecId) {
        var url = "/Sessions/Delete?id=" + subjecId;

        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };

    function myFunction() {
        var url = "/Sessions/Save?id=0";
        // window.alert(url);
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    }
</script>