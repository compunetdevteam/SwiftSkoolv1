
@{
    //ViewBag.Title = "Login4";
    Layout = "~/Views/Shared/_LoginPartial4.cshtml";
}
<br/>
<div class="jumbotron">
    <div class="photo">
        <a href="@Url.Action("Index4","Home")"><img src="~/Content/images/swiftskool.png" width="90" height="70"/></a>
        <div class="clearfix"></div>
    </div><br>
    <h3>WELCOME</h3>
    <hr>
    <form class="form-horizontal" role="form" action="@Href("~/Account/Login")" method="POST">
        <div class="card-block">
            <div class="md-form">
                <i class="fa fa-user prefix"></i>
                <input type="text" id="username" class="form-control" required="">
                <label for="form1">USERNAME/USERID</label>
            </div>
            <div class="md-form">
                <i class="fa fa-lock prefix"></i>
                <input type="password" id="password" class="form-control" required="">
                <label for="form2">PASSWORD</label>
            </div>
            <fieldset class="form-group">
                <input type="checkbox" id="RememberMe" name="RememberMe">
                <label for="RememberMe">Remember Me</label>
            </fieldset>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default"> LOGIN</button>
            </div>
            <hr>
            <div class="forgot-password" style="float: right; margin-right: 15%">
                <a href="@Url.Action("ForgotPassword","Account")"><i>Forgot Password?</i></a>
            </div>
        </div>
        </div>
    </form>
</div>



