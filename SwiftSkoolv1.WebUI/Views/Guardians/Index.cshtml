@model IEnumerable<SwiftSkoolv1.Domain.Guardian>



    @*<a onclick="myFunction()" class="btn btn-primary btn-lg"> <i class="fa fa-plus left"></i> Add Guardian</a>*@
    <table id="Jdatatable" class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Student Id</th>
            <th>Guardian Name</th>
            <th>Phone Number </th>
            <th>Relationship </th>
            <th>Action</th>
        </tr>
        </thead>
    </table>


<!-- Modal -->
<div class="modal fade modal-bf-fh" id="actionsList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header">
                <p class="heading lead">Guardian</p>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="white-text">&times;</span>
                </button>
            </div>
            <!--Body-->
            <div class="modal-body" id="myModalDivBody">

            </div>
        </div>
        <!--/.Content-->
    </div>
</div>
<!-- /.Modal-->



<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
    <a class="btn-floating btn-large red">
        <i class="fa fa-pencil"></i>
    </a>

    <ul>
        <li><a href="#" onclick="Excel()" class="btn-floating red"><i class="fa fa-star"></i>Excel Upload</a></li>
        <li><a href="#" onclick="myFunction()" class="btn-floating yellow darken-1"><i class="fa fa-user"></i></a></li>
    </ul>
</div>

<script src="~/Scripts/jquery-3.1.1.min.js"></script>


<script type="text/javascript">
    $(document).ready(function () {

        window.oTable = $("#Jdatatable").DataTable({
            "processing": true, // for show progress bar while loading
            "serverSide": true, // if it is true the preocess is done on server side
            "filter": true, // disables search box
            "info": true,
            "stateSave": true,
            "orderMulti": false, // disable multiple column loading at once
            "ajax": {
                "url": "/Guardians/GetIndex",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                { "data": "StudentId", "autoWidth": true },
                { "data": "FullName", "autoWidth": true },
                { "data": "PhoneNumber", "autoWidth": true },
                { "data": "Relationship", "autoWidth": true },
                {
                    "data": "GuardianId",
                    "autoWidth": true,
                    "render": function (data) {
                        return '<a href="#" onclick="Edit(' + data + ')" ><i class="fa fa-pencil" aria-hidden="true" ></i></a>' +
                            '<a class="text-danger" href="#" onclick="Delete(' + data + ')" ><i class="fa fa-remove" aria-hidden="true" ><i/></a>';
                    }
                }
                //{ "data": "EmailID", "autoWidth": true },
                //{ "data": "Phone", "autoWidth": true },
            ]
        });


    });
 
    function Delete(subjecId) {
        var url = "/Guardians/Delete?id=" + subjecId;
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };
    function Edit(subjecId) {
        var url = "/Guardians/Save?id=" + subjecId;
        //$('#actionsList').modal("show");
        //window.alert(url);
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };
    function Details(subjecId) {
        var url = "/Guardians/Save?id=" + subjecId;
        //$('#actionsList').modal("show");
        //window.alert(url);
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };
    function myFunction() {
        var url = "/Guardians/Save?id=0";
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };
    function Excel() {
        var url = "/Guardians/UpLoadGuardian";
        //$('#actionsList').modal("show");
        //window.alert(url);
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };
</script>
