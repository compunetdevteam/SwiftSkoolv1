@model SwiftSkool.Models.ReportCardVm
@using SwiftSkool.Extensions

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "ReportCards", FormMethod.Post, new { enctype = "multipart/form-data" }))
