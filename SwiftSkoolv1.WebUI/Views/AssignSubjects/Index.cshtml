@model IEnumerable<SwiftSkoolv1.Domain.AssignSubject>

@{
    ViewBag.Title = "Assigned Subjects";
}
<!-- Modal -->
<div class="card">
    <div class="card-block">
       
        <div class="form-header  purple darken-4">
            <h3>
                Assigned Subjects <span><a href="#" onclick="myFunction()" class="btn btn-primary"><i class="fa fa-user"></i>Assign Subject</a></span>
                
            </h3>
        </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
               <form class="form-inline" id="formFilter" onsubmit="return false;">
                    <br/>
                   <div class="form-group">
                       <label for="ClassName">ClassName</label>
                       @Html.DropDownList("ClassName", (SelectList) ViewBag.ClassName, "", new {@class = "form-control"})

                   </div>
                   <div class="form-group">
                       <label for="TermName">Term Name</label>
                       @Html.DropDownList("TermName", (SelectList) ViewBag.TermName, "", new {@class = "form-control"})

                   </div>

                    <div class="form-group">
                        <button type="submit" id="btn-search" data-toggle="tooltip" data-placement="top" title="Search Subject by Class!" class="btn btn-primary"><i class="fa fa-search"></i> View Subject</button>
                    </div>

               </form>
            </div>
            </div>
            </div>
        <div class="row">

            <table id="Jdatatable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Class Name</th>
                        <th>Subject Name</th>
                        <th>Term </th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>
        
        </div>
        
       
    </div>
    <!-- /.Modal-->

<div class="modal fade modal-bf-fh" id="actionsList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="flex-center">
                    <h4 class="modal-title">Assign Subjects</h4>
                </div>
            </div>
            <!--Body-->
            <div class="modal-body" id="myModalDivBody">
            </div>
        </div>
        <!--/.Content-->
    </div>
</div>

<script src="~/Scripts/jquery-3.1.1.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
       
        window.oTable = $("#Jdatatable").DataTable({
            "processing": true, // for show progress bar while loading
            //"serverSide": true, // if it is true the preocess is done on server side
            //"filter": true, // disables search box
            //"info": true,
            //"stateSave": true,
            //"orderMulti": false, // disable multiple column loading at once
            "ajax": {
                "url": "/AssignSubjects/GetIndex",
                "type": "POST",
                "data": function (d) {
                    return $('#formFilter').serialize();
                },
                "datatype": "json"
            },
            "columns": [
                { "data": "ClassName", "autoWidth": true },
                { "data": "SubjectName", "autoWidth": true },
                { "data": "TermName", "autoWidth": true },
                {
                    "data": "AssignSubjectId",
                    "autoWidth": true,
                    "render": function (data) {
                        return '<a href="#" onclick="Edit(' + data + ')" ><i class="fa fa-pencil" aria-hidden="true" ></i>Edit</a>&nbsp;&nbsp;&nbsp;&nbsp;' +
                            '<a class="text-danger" href="#" onclick="Delete(' + data + ')" ><i class="fa fa-remove" aria-hidden="true" ></i>Remove</a>';
                    }
                }
            ]
        });

    });
    $("#btn-search").click(function () {
        window.oTable.ajax.reload();
    });

    function Edit(AssignSubjectId) {
        var url = "/AssignSubjects/Save?id=" + AssignSubjectId;
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };
    function Delete(AssignSubjectId) {
        var url = "/AssignSubjects/Delete?id=" + AssignSubjectId;
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };
    function myFunction() {
        var url = "/AssignSubjects/Save?id=0";
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };
</script>