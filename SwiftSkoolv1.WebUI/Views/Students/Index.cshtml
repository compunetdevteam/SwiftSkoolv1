<div class="tablecontainer" style="width: 90%; margin: 0 auto">
    @*<a class="popup" href="/Subjects/Save/0" style="margin-bottom: 20px; margin-top: 20px">Add</a>*@
    <table id="Jdatatable" class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Student ID</th>
            <th> Full Name</th>
            <th> Gender</th>
            <th>Actions</th>
        </tr>
        </thead>
    </table>
</div>

<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
    <a class="btn-floating btn-large red">
        <i class="fa fa-pencil"></i>
    </a>

    <ul>
        <li><a href="#" onclick="Excel()" class="btn-floating red"><i class="fa fa-star"></i>Excel Upload</a></li>
        <li><a href="#" onclick="AddNew()" class="btn-floating yellow darken-1"><i class="fa fa-user"></i></a></li>
    </ul>
</div>
<!-- Modal -->
<div class="modal fade modal-bf-fh" id="actionsList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="flex-center">
                    <h4 class="modal-title">Students</h4>
                </div>
            </div>
            <!--Body-->
            <div class="modal-body" id="myModalDivBody">

            </div>
        </div>
        <!--/.Content-->
    </div>
</div>
<!-- /.Modal-->
<script src="~/Scripts/jquery-3.1.1.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
  
        window.oTable = $("#Jdatatable").DataTable({
            "processing": true, // for show progress bar while loading
            "serverSide": true, // if it is true the preocess is done on server side
            "filter": true, // disables search box
            "info": true,
            "stateSave": true,
            "orderMulti": false, // disable multiple column loading at once
            "ajax": {
                "url": "/Students/GetIndex",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                { "data": "StudentId", "autoWidth": true },
                { "data": "FullName", "autoWidth": true },
                { "data": "Gender", "autoWidth": true },
                {
                    "data": "SubjectId",
                    "autoWidth": true,
                    "render": function(data) {
                        return '<a href="#" onclick="Edit('+data+')"><i class="fa fa-pencil" aria-hidden="true"></i></a>' +
                            '<a href="#" onclick="Details(' + data +')"><i class="fa fa-info-circle" aria-hidden="true"></i></a>' +
                            '<a class="text-danger" href="#" onclick="Delete('+data+')" ><i class="fa fa-remove" aria-hidden="true" ></i></a>';

                    }
                }
            
            ]
        });
      
    });
    function Excel() {
        var url = "/Students/ExcelUpload";
        //$('#actionsList').modal("show");
        //window.alert(url);
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };
    function AddNew(subjecId) {
        var url = "/Students/Edit?id=" + subjecId;
        //$('#actionsList').modal("show");
        //window.alert(url);
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };
    function Edit(subjecId) {
        var url = "/Students/Edit?id=" + subjecId;
        //$('#actionsList').modal("show");
        //window.alert(url);
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };
    function Details(subjecId) {
        var url = "/Students/Details?id=" + subjecId;
        //$('#actionsList').modal("show");
        //window.alert(url);
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };
    function Delete(subjecId) {
        var url = "/Students/Delete?id=" + subjecId;
        //$('#actionsList').modal("show");
        //window.alert(url);
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };
</script>
