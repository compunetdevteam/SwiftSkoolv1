                    @Html.EnumDropDownListFor(model => model.StartDuration, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.StartDuration, "", new { @class = "text-danger" })
                </div>
            </div>
    
