                    </div>
                </div>
        
                <div class="form-group">
                    @Html.LabelFor(model => model.Classes, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("classes", (SelectList)ViewBag.Classes, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Days, "", new { @class = "text-danger" })
                    </div>
                </div>

                @Html.LabelFor(model => model.Days, htmlAttributes: new {@class = "control-label col-md-2"})
