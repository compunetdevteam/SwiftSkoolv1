                    @Html.EnumDropDownListFor(model => model.EndDuration, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.EndDuration, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
