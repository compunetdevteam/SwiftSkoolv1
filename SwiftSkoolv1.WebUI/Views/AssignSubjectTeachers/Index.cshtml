@model SwiftSkoolv1.Domain.AssignSubjectTeacher
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<style>
    span.field-validation-error {
        color: red;
    }
</style>


@*@if (User.IsInRole("Admin"))
{*@
<div class="card contact-card card-cascade narrower mb-r">
<div class="admin-panel info-admin-panel">
    <!-- Card title -->
    <div class="view primary-color">
        <h5>Assigned Subject List</h5>
    </div>
    <br/>
    <br/>

    <div class="tablecontainer" style="width: 90%; margin: 0 auto">
        <a onclick="myFunction()" class="btn btn-primary btn-lg"> <i class="fa fa-plus left"></i> Assign Subject to Teacher </a>
        <table id="Jdatatable" class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Staff Name</th>
                <th>Class Name</th>
                <th>Subjects</th>
                <th>Action</th>
               
            </tr>
            </thead>
        </table>
    </div>



    <!-- Modal -->
    <div class="modal fade modal-bf-fh" id="actionsList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <!--Content-->
            <div class="modal-content">
                <!--Header-->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <div class="flex-center">
                        <h4 class="modal-title">Assign Subject To  Teacher</h4>
                    </div>
                </div>
                <!--Body-->
                <div class="modal-body" id="myModalDivBody">

                </div>
            </div>
            <!--/.Content-->
        </div>
    </div>
    <!-- /.Modal-->
    @*}*@
</div>
    </div>
<script src="~/Scripts/jquery-3.1.1.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        window.oTable = $("#Jdatatable").DataTable({
            "processing": true, // for show progress bar while loading
            "serverSide": true, // if it is true the preocess is done on server side
            "filter": true, // disables search box
            "info": true,
            "stateSave": true,
            "orderMulti": false, // disable multiple column loading at once
            "ajax": {
                "url": "/AssignSubjectTeachers/GetIndex",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                { "data": "StaffName", "autoWidth": true },
                { "data": "ClassName", "autoWidth": true },
                { "data": "SubjectName", "autoWidth": true },
                {
                    "data": "Id",
                    "autoWidth": true,
                    "render": function(data) {
                        return '<a href="#" onclick="Edit(' + data + ')" ><i class="fa fa-pencil" aria-hidden="true" ></i>Edit</a>' +
                                '<a class="text-danger" href="#" onclick="Delete(' + data + ')" ><i class="fa fa-remove" aria-hidden="true" ></i>Remove</a>';

                    }
                }
            
            ]
        });
      
    });
    function Edit(Id) {
        var url = "/AssignSubjectTeachers/Save?id=" + Id;
        //$('#actionsList').modal("show");
        //window.alert(url);
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };
    function Delete(Id) {
        var url = "/AssignSubjectTeachers/Delete?id=" + Id;
        //$('#actionsList').modal("show");
        //window.alert(url);
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };
    function myFunction() {
        var url = "/AssignSubjectTeachers/Save?id=0";
        //$('#actionsList').modal("show");
        // window.alert(url);
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };
</script>
