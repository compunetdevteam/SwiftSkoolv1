@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <!-- First row -->
    <div class="row">
        <!-- First column -->
        <div class="col-md-7">
            <div class="card">
                <div class="card-head style-primary">
                    <header>
                        <h3>
                            Assigned Courses
                        </h3>
                    </header>

                </div><!--end .card-head -->
                <div class="card-body">
   
                    <table id="Jdatatable" class="table table-striped table-hover">
                        <thead>
                        <tr>
           
                            <th>Course Name</th>
                            <th>Level</th>
                            <th>Dept Option</th>
   
                            <th>Action</th>
                        </tr>
                        </thead>
                    </table>

                </div>
            </div>
        </div>
        <!-- Second column -->
        <div class="col-md-5 mb-1" id="mydetailBody">
        
      
        </div>
        <!-- /.Second column -->

    </div>
</div>
<div class="container-fluid">
    <!-- First row -->
    <div class="row">
        <!-- First column -->
        <div class="col-md-7" id="mydetailBody2">
          

        </div>
        <!-- Second column -->
        <div class="col-md-5 mb-1" id="mydetailBody3">
            
        </div>
        <!-- /.Second column -->

    </div>
</div>

<div class="container-fluid">
    <!-- First row -->
    <div class="row">
        <!-- First column -->
        <div class="col-md-12" id="topicContentDetail">
            
        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade modal-bf-fh" id="actionsList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="flex-center">
                    <h4 class="modal-title">ASSIGNED COURSE</h4>
                    @*<a class="btn btn-primary btn-sm">Create new action</a>*@
                </div>
            </div>
            <!--Body-->
            <div class="modal-body" id="myModalDivBody">
            </div>
        </div>
        <!--/.Content-->
    </div>
</div>
<!-- /.Modal-->


    <script src="~/Scripts/jquery-1.11.3.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        var message = "@ViewBag.Message";
        if (message) {
            toastr["success"](message);
        }
        window.oTable = $("#Jdatatable").DataTable({
            "processing": true, // for show progress bar while loading
            //"serverSide": true, // if it is true the preocess is done on server side
            //"filter": true, // disables search box
            //"info": true,
            //"stateSave": true,
            //"orderMulti": false, // disable multiple column loading at once
            "ajax": {
                "url": "/ELearning/MyCourses",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
            
                { "data": "CourseName", "autoWidth": true },
                { "data": "LevelName", "autoWidth": true },
                { "data": "ProgrammeName", "autoWidth": true },
           
                {
                    "data": "CourseId",
                    "autoWidth": true,
                    "render": function (data) {
                        return '<a href="#" onclick="CourseDetails(' + data + ')" >  <i class="fa fa-asterisk" aria-hidden="true" >&nbsp;Details</i></a>&nbsp;&nbsp;' +
                            '<a href="#" onclick="AddModule(' + data + ')" >  <i class="fa fa-plus-circle" aria-hidden="true" >&nbsp;Module</i></a>' ;
                            //'<a class="text-danger" data-toggle="modal" data-target="#actionsList"  onclick="Delete(' + data + ')" ><i class="fa fa-remove" aria-hidden="true" >&nbsp;Remove<i /></a>';
                    }
                }

                //{ "data": "EmailID", "autoWidth": true },
                //{ "data": "Phone", "autoWidth": true },
            ]
        });

    });
    //$(window).scroll(function(){
    //    $("#mydetailBody").stop().animate({"marginTop": ($(window).scrollTop()) + "px", "marginLeft":($(window).scrollLeft()) + "px"}, "slow" );
    //});

    function CourseDetails(courseId) {
        var url = "/ELearning/CourseDetails?id=" + courseId;
        $('#mydetailBody').load(url);

    };

    function AddModule(courseId) {
        var url = "/ELearning/SaveModule?id=" + courseId;
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal('show');
            });
    };

  
</script>