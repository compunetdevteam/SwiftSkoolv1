@{
    ViewBag.Title = "Index";
}
<div class="card">
    <div class="card-block">

        <div class="form-header  purple darken-4">
            <h3>
                <i class="fa fa-pencil-square-o"></i> E-Learning
            </h3>
        </div>

        <!-- First row -->
        <div class="row">
            <div class="card">
                    <div class="card-head style-primary">
                        <header>
                            <h3>
                                My Subjects
                            </h3>
                        </header>

                    </div><!--end .card-head -->
                    <div class="card-body">
                        <table id="Jdatatable" class="table table-responsive table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Subject Code</th>
                                    <th>Subject Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>

                    </div>
                </div>
            </div>
           
       
   

        <div class="row">
            <div class="col-sm-6">

                <div class="card-head" id="mydetailBody">

                </div>


            </div>
            <!-- First column -->
            <div class="col-sm-6">
                <div class="card" id="mydetailBody2">

                </div>

            </div>
          
        </div>
       
        <div class="row">
            <div class="card" id="mydetailBody3">

            </div>
        </div>
      

       



        <!-- Third row -->
        <div class="row">

            <!-- First column -->
            <div class="col-md-12" id="topicContentDetail">

            </div>
        </div>
</div>
   
</div>


<!-- Modal -->
<div class="modal fade modal-bf-fh" id="actionsList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="flex-center">
                    <h4 class="modal-title"></h4>
                    @*<a class="btn btn-primary btn-sm">Create new action</a>*@
                </div>
            </div>
            <!--Body-->
            <div class="modal-body" id="myModalDivBody">
            </div>
        </div>
        <!--/.Content-->
    </div>
</div>
<!-- /.Modal-->


<script src="~/Scripts/jquery-1.11.3.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        var message = "@ViewBag.Message";
        if (message) {
            toastr["success"](message);
        }
        window.oTable = $("#Jdatatable").DataTable({
            "processing": true, // for show progress bar while loading
          
            "ajax": {
                "url": "/ELearning/MyCourses",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [

                { "data": "SubjectCode", "autoWidth": true },
                { "data": "SubjectName", "autoWidth": true },

                {
                    "data": "SubjectId",
                    "autoWidth": true,
                    "render": function (data) {
                        return '<a href="#" title="View Course Details" onclick="CourseDetails(' + data + ')" >  <i class="fa fa-asterisk" aria-hidden="true" >&nbsp;Details</i></a>&nbsp;&nbsp;' +
                            '<a href="#" title="Add Course Module" onclick="AddModule(' + data + ')" >  <i class="fa fa-plus-circle" aria-hidden="true" >&nbsp;Module</i></a>' ;
                            //'<a class="text-danger" data-toggle="modal" data-target="#actionsList"  onclick="Delete(' + data + ')" ><i class="fa fa-remove" aria-hidden="true" >&nbsp;Remove<i /></a>';
                    }
                }

           
            ]
        });

    });
    //$(window).scroll(function(){
    //    $("#mydetailBody").stop().animate({"marginTop": ($(window).scrollTop()) + "px", "marginLeft":($(window).scrollLeft()) + "px"}, "slow" );
    //});

    function CourseDetails(courseId) {
        var url = "/ELearning/CourseDetails?id=" + courseId;
        $('#mydetailBody').load(url);
        $('html, body').animate({ scrollTop: $('#mydetailBody').offset().top }, 'slow');
    };

    function AddModule(courseId) {
        var url = "/ELearning/SaveModule?id=" + courseId;
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal('show');
            });
    };


</script>