@model SwiftSkoolv1.WebUI.ViewModels.AssignedClassesViewModel

@{
    ViewBag.Title = "Create";
}
<script src="~/Scripts/chosen.jquery.min.js"></script>


<div class="card">
    <div class="card-block">

        <div class="form-header  purple darken-4">
            @if (Model != null && Model.AssignedClassId > 0)
            {
                <div class="form-header  purple darken-4">
                    <h3>
                        <i class="fa fa-save"></i> Update Record
                    </h3>
                </div>
            }
            else
            {
                <div class="form-header  purple darken-4">
                    <h3><i class="fa fa-save"></i> Assign Student Class</h3>
                </div>
            }
        </div>

        <form id="myform" onsubmit="return false;">
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @if (Model != null && Model.AssignedClassId > 0)
            {
                @Html.HiddenFor(model => model.AssignedClassId)
            }

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "form text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.ClassName)
                    <div class="col-md-6">
                        @Html.DropDownList("ClassName", (SelectList)ViewBag.ClassName, "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ClassName, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.TermName)
                    <div class="col-md-6">
                        @Html.DropDownList("TermName", (SelectList)ViewBag.TermName, "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TermName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SessionName)
                    <div class="col-md-6">
                        @Html.DropDownList("SessionName", (SelectList)ViewBag.SessionName, "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SessionName, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.Label("Student Name")
                    @Html.DropDownList("StudentId", null, new { @class = "form-control chosen-select", @multiple = "true" })
                    @Html.ValidationMessageFor(model => model.StudentId, "", new { @class = "text-danger" })

                </div>
                <br />
                <br />
                <div class="form-group">

                    @if (Model != null && Model.AssignedClassId > 0)
                    {
                        <input id="btnsubmit" type="submit" value="Update" class="btn btn-primary" />
                    }
                    else
                    {
                        <input id="btnsubmit" type="submit" value="Save" class="btn btn-primary" />
                    }

                    <a href="#" id="btncancel" class="btn btn-danger" data-dismiss="modal">Cancel</a>

                </div>
            </div>
        </form>
    </div>
</div>


<script src="~/Scripts/jquery-1.11.3.min.js"></script>
<script src="~/Scripts/chosen.jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $('.chosen-select').chosen();
        //window.alert("ready");


        $("#btnsubmit").click(function () {

            var data = $("#myform").serialize();

            $.ajax({
                type: "POST",
                url: "/AssignedClasses/Save",
                data: data,
                success: function (data) {
                    if (data.status) {
                        $('#actionsList').modal("hide");
                        toastr["success"](data.message);
                        toastr["success"]("You can add more Now");
                        $('#myform')[0].reset();
                        window.open("/AssignedClasses/Index", '_self');
                    } else {
                        //$('#actionsList').modal("hide");
                        toastr["error"](data.message);
                    }

                }
            });
        });
    })
</script>


