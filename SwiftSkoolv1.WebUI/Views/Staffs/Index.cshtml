@model IEnumerable<SwiftSkoolv1.Domain.Staff>



<div class="card">
<div class="card-block">

    <div class="form-header  purple darken-4">
        <h3>
            Satff List <span><a href="#" onclick="AddNew()" class="btn btn-primary"><i class="fa fa-user"></i>Add Staff</a></span>
            <span><a href="#" onclick="Excel()" class="btn btn-primary"><i class="fa fa-file-excel-o"></i>Excel Upload</a></span>
           
           
        </h3>
    </div>
    <div class="container-fluid">
        <!-- First row -->
        <div class="row">
            <!-- First column -->
            <div class="col-md-8">

                <div class="row">
                    <div class="col-md-12 mb-1">
                        <!-- Tabs -->
                        <!-- Nav tabs -->
                        
                        <!-- Tab panels -->
                        <div class="tab-content card">
                            <!--Panel 1-->
                            <div class="tab-pane fade show active" id="panel83" role="tabpanel">
                                <div class="table-responsive">
                                    <table id="Jdatatable" class="table table-responsive">
                                        <thead>
                                        <tr>
                                            <th> Salutation</th>
                                            <th> First Name</th>
                                            <th> Last Name</th>
                                            <th> Gender</th>
                                            <th> Designation</th>
                                            <th>Actions</th>
                                        </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                            <!--/.Panel 1-->
                        </div>
                        <!-- /.Tabs -->
                    </div>
                </div>
            </div>
            <!-- /.First column -->
            <!-- Second column -->
            <div class="col-md-4 mb-1">
                <div class="card contact-card with-padding">
                    <div class="card-body" id="mydetailBody">

                    </div>
                </div>
            </div>
            <!-- /.Second column -->
        </div>
        <!-- /.First row -->
    </div>
</div>
</div>

<!-- Modal -->
<div class="modal fade modal-bf-fh" id="actionsList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="flex-center">
                    <h4 class="modal-title">Staff</h4>
                </div>
            </div>
            <!--Body-->
            <div class="modal-body" id="myModalDivBody">

            </div>
        </div>
        <!--/.Content-->
    </div>
</div>
<!-- /.Modal-->
<script src="~/Scripts/jquery-3.1.1.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        window.oTable = $("#Jdatatable").DataTable({
            "processing": true, // for show progress bar while loading
            "serverSide": true, // if it is true the preocess is done on server side
            "filter": true, // disables search box
            "info": true,
            "stateSave": true,
            "orderMulti": false, // disable multiple column loading at once
            "ajax": {
                "url": "/Staffs/GetIndex",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                { "data": "Salutation", "autoWidth": true },
                { "data": "FirstName", "autoWidth": true },
                { "data": "LastName", "autoWidth": true },
                { "data": "Gender", "autoWidth": true },
                { "data": "Designation", "autoWidth": true },
                {
                    "data": "StaffId",
                    "autoWidth": true,
                    "render": function(data) {
                        return '<a href="#" onclick="Detail(\'' + data + '\')" data-toggle="tooltip" data-placement="top" title="View Details"><i class="fa fa-info-circle" aria-hidden="true" ></i></a>' +
                            '<a href="#" onclick="Edit(\'' + data + '\')" data-toggle="tooltip" data-placement="top" title="Edit Student"><i class="fa fa-pencil" aria-hidden="true" ></i></a>' +
                        '<a href="#" onclick="Delete(\'' + data + '\')" data-toggle="tooltip" data-placement="top" title="Delete Staff"><i class="fa fa-remove" aria-hidden="true" ></i></a>';
                    }
                }
                //{ "data": "EmailID", "autoWidth": true },
                //{ "data": "Phone", "autoWidth": true },
            ]
        });

       
    });
    $(window).scroll(function(){
        $("#mydetailBody").stop().animate({"marginTop": ($(window).scrollTop()) + "px", "marginLeft":($(window).scrollLeft()) + "px"}, "slow" );
    });
    function Edit(subjecId) {

        var url = "/Staffs/Edit?id=" + subjecId;
        window.open(''+url+'', '_self');
    };
       
    function Detail(subjecId) {
        //window.alert(subjecId);
        var url = "/Staffs/PartialDetails?id=" + subjecId;
        $('#mydetailBody').load(url);
               
    };

    function Excel() {
        var url = "/Staffs/ExcelUpload";
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal("show");
            });
    };
    function AddNew() {
        window.open('@Url.Action("RegisterStaff", "Account")', '_self');
    };

    function Delete(adminId) {
        // window.alert(adminId);
        var retVal = confirm("Do you want to Remove/Delete this Teacher?");
        if (retVal === true) {
            $.ajax({
                type: "POST",
                url: "/Staffs/Delete?id=" + adminId,
                success: function(data) {
                    if (data.status) {
                        window.oTable.ajax.reload(); //run my_fun() ondomready
                        toastr["info"](data.message);
                    } else {
                        toastr["error"](data.message);
                    }

                }
            });
            return true;
        }
        else{
            return false;
        }
    }
</script>
