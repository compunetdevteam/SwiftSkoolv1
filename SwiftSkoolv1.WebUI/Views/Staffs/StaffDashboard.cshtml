@model SwiftSkoolv1.WebUI.ViewModels.StaffVM
@{
    ViewBag.Title = "StaffDashboard";
}

<h2>StaffDashboard</h2>



<!-- First row -->
<div class="row mb-r">
    <!-- First column -->
    <div class="col-md-3 mb-1">
        <!--Card-->
        <div class="card card-cascade cascading-admin-card">

            <!--Card Data-->
            <div class="admin-up">
                <i class="fa fa-money  blue darken-3"></i>
                <div class="data">
                    <p>Assigned Class</p>
                    @if (Model.ClassName == null)
                    {
                        <h5>Not Assiged </h5>

                    }
                    else
                    {   
                        <h5>@Model.ClassName</h5>
                    }
                </div>
            </div>
            <!--/.Card Data-->

            <!--Card content-->
            <div class="card-block">
                <div class="progress">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <!--Text-->
                <p class="card-text">Assigned Class</p>
            </div>
            <!--/.Card content-->

        </div>
        <!--/.Card-->
    </div>

    <!-- Second column -->
    <div class="col-md-3 mb-1">
        <!--Card-->
        <div class="card card-cascade cascading-admin-card">

            <!--Card Data-->
            <div class="admin-up">
                <i class="fa fa-line-chart deep-purple darken-4"></i>
                <div class="data">
                    <p>Students Number</p>
                    
                    @if (Model.TotalStudentInClass == 0)
                    {
                        <h5>No Student</h5>
                    }
                    else
                    {
                        <h5>@Model.TotalStudentInClass</h5>   
                    }
                    
                </div>
            </div>
            <!--/.Card Data-->

            <!--Card content-->
            <div class="card-block">
                <div class="progress">
                    <div class="progress-bar bg-danger" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <!--Text-->
                <p class="card-text">Number of Student</p>
            </div>
            <!--/.Card content-->

        </div>
        <!--/.Card-->
    </div>

    <!-- Third column -->
    <div class="col-md-3 mb-1">
        <!--Card-->
        <div class="card card-cascade cascading-admin-card">

            <!--Card Data-->
            <div class="admin-up">
                <i class="fa fa-pie-chart indigo"></i>
                <div class="data">
                    <p>Assigments</p>
                    <h3>2</h3>
                </div>
            </div>
            <!--/.Card Data-->

            <!--Card content-->
            <div class="card-block">
                <div class="progress">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <!--Text-->
                <p class="card-text">Number of Assignments</p>
            </div>
            <!--/.Card content-->

        </div>
        <!--/.Card-->
    </div>

    <!-- Fourth column -->
    <div class="col-md-3 mb-1">
        <!--Card-->
        <div class="card card-cascade cascading-admin-card">

            <!--Card Data-->
            <div class="admin-up">
                <i class="fa fa-bar-chart purple"></i>
                <div class="data">
                    <p>ORGANIC TRAFFIC</p>
                    <h3>2000</h3>
                </div>
            </div>
            <!--/.Card Data-->

            <!--Card content-->
            <div class="card-block">
                <div class="progress">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <!--Text-->
                <p class="card-text">Better than last week (25%)</p>
            </div>
            <!--/.Card content-->

        </div>
        <!--/.Card-->
    </div>
</div>
<!-- /.First row -->

