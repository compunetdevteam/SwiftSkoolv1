
@{
    ViewBag.Title = "Area Chart";
}

<div id="chartContainer"></div>
<script src="~/Scripts/jquery-3.1.0.min.js"></script>
<script src="~/Scripts/canvasjs.min.js"></script>
    
<script type="text/javascript">

    $(function () {
        var chart = new CanvasJS.Chart("chartContainer", {
            theme: "theme2",
            exportEnabled: true,
            
            animationEnabled: true,
            title: {
                text: "Monthly Downloads",
                fontSize: 25
            },
            axisX: {
                valueFormatString: "MMM",
                interval: 1,
                intervalType: "month"

            },
            axisY: {
                title: "Downloads"
            },

            data: [
                {
                    type: "area",
                    //dataPoints: [
                    //    { x: new Date(2012, 00, 1), y: 2600 },
                    //    { x: new Date(2012, 01, 1), y: 3800 },
                    //    { x: new Date(2012, 02, 1), y: 4300 },
                    //    { x: new Date(2012, 03, 1), y: 2900 },
                    //    { x: new Date(2012, 04, 1), y: 4100 },
                    //    { x: new Date(2012, 05, 1), y: 4500 },
                    //    { x: new Date(2012, 06, 1), y: 8600 },
                    //    { x: new Date(2012, 07, 1), y: 6400 },
                    //    { x: new Date(2012, 08, 1), y: 5300 },
                    //    { x: new Date(2012, 09, 1), y: 6000 }
                    //],

                    //You can add dynamic data from the controller as shown below. Check the controller and uncomment the line which generates dataPoints.
                    dataPoints: @Html.Raw(ViewBag.DataPoints)
                }
            ]
        });

        chart.render();
    });
</script>